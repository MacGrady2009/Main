<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <com.android.third.richeditor.RichEditor
      android:id="@+id/editor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:bgColor="@android:color/darker_gray"
      app:fontColor="@android:color/black"
      app:fontSize="6dp"
      app:height="100dp"
      app:bgRes="@drawable/shape_corner"
      app:placeholder="请输入内容"/>

  <include layout="@layout/item_rich_editor_bar"/>
</RelativeLayout>
