<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.android.guide">
  <application>
    <activity android:name="com.android.guide.mvp.view.AdActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <category android:name="android.intent.category.BROWSABLE" />
        <data android:scheme="${SCHEME}"/>
      </intent-filter>
    </activity>

    <activity android:name="com.android.guide.mvp.view.GuideActivity"
        android:screenOrientation="portrait">
    </activity>
  </application>
</manifest>