<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bottom_navigation_bar_bg">

  <RelativeLayout
      android:id="@+id/rl_chat"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintWidth_percent="0.33"
      android:tag="0">

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bottom_bar_chat"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_chat"
        android:textColor="@color/white"
        android:background="@drawable/shape_big_red_oval"
        android:layout_marginTop="@dimen/px_3"
        android:layout_marginLeft="-20dp"
        android:textSize="@dimen/dp_12"
        android:text="10"/>
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/rl_contact"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintStart_toEndOf="@id/rl_chat"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintWidth_percent="0.34"
      android:tag="1">

    <ImageView
        android:id="@+id/iv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bottom_bar_contact"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/todo" />

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/rl_mine"
      android:layout_width="@dimen/dp_0"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintStart_toEndOf="@id/rl_contact"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintWidth_percent="0.33"
      android:tag="2">

    <ImageView
        android:id="@+id/iv_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/selector_bottom_bar_mine"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/tv_mine"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_toEndOf="@id/iv_mine"
        android:layout_marginTop="@dimen/px_3"
        android:layout_marginLeft="-20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:background="@drawable/shape_small_red_oval" />
  </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

